<Page x:Class="WPF_Payment_Project.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление/Редактирование категории">
    <Grid>
        <Grid MaxWidth="480" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="Категория" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="1" 
                    Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="16"
                    Padding="40">
                <StackPanel>
                    <StackPanel Margin="0,0,0,8">
                        <Label Content="Название категории" Margin="0,0,0,8"/>
                        <Grid>
                            <TextBox x:Name="txtName" Height="48" MaxLength="50" TextChanged="txtName_TextChanged" PreviewTextInput="txtName_PreviewTextInput"/>
                            <TextBlock x:Name="lblNameHint" Text="Введите название" Foreground="Gray" IsHitTestVisible="False" VerticalAlignment="Center" Margin="12,0,0,0" Visibility="Visible"/>
                        </Grid>
                        <TextBlock x:Name="txtCharCount" Text="0/50" FontSize="11" Foreground="Gray" Margin="4,4,0,0"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,32">
                        <Label Content="Описание" Margin="0,0,0,8"/>
                        <Grid>
                            <TextBox x:Name="txtDescription" Height="80" TextWrapping="Wrap" AcceptsReturn="True" MaxLength="200" TextChanged="txtDescription_TextChanged"/>
                            <TextBlock x:Name="lblDescriptionHint" Text="Введите описание (необязательно)" Foreground="Gray" IsHitTestVisible="False" VerticalAlignment="Top" Margin="12,8,0,0" Visibility="Visible"/>
                        </Grid>
                        <TextBlock x:Name="txtDescCharCount" Text="0/200" FontSize="11" Foreground="Gray" Margin="4,4,0,0"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="btnSave" 
                                Content="Сохранить" 
                                Grid.Column="0"
                                Height="48"
                                Margin="0,0,8,0"
                                Click="btnSave_Click"/>
                        <Button x:Name="btnCancel" 
                                Content="Отмена" 
                                Grid.Column="1"
                                Height="48"
                                Margin="8,0,0,0"
                                Background="Transparent" 
                                Foreground="{DynamicResource PrimaryBrush}" 
                                BorderThickness="0"
                                Click="btnCancel_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
