<Window x:Class="WPF_Payment_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система учета платежей" 
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrush}">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ButtonBack" 
                        Content="← Назад" 
                        Grid.Column="0"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Width="100"
                        Height="40"
                        Click="ButtonBack_Click"/>

                <ComboBox x:Name="CmbTheme" 
                          Grid.Column="2"
                          Width="160"
                          Height="40"
                          Margin="0,0,16,0"
                          VerticalAlignment="Center"
                          SelectionChanged="CmbTheme_SelectionChanged">
                    <ComboBoxItem Content="Светлая тема" IsSelected="True"/>
                    <ComboBoxItem Content="Темная тема"/>
                </ComboBox>

                <TextBlock x:Name="DateTimeNow"
                           Grid.Column="3"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
            </Grid>
        </Border>

        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
