<Page x:Class="WPF_Payment_Project.Pages.PaymentTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Таблица платежей"
      Loaded="Page_Loaded">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Платежи" 
                   Grid.Row="0"
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0,0,0,24"/>

        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,16">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="Поиск:" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="txtSearch" 
                             MinWidth="200"
                             Height="40"
                             TextChanged="txtSearch_TextChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="Категория:" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="cmbCategory" 
                              MinWidth="150"
                              Height="40"
                              SelectionChanged="cmbCategory_SelectionChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="От:" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <DatePicker x:Name="dpStartDate" 
                                Width="120"
                                Height="40"
                                SelectedDateChanged="dpDate_SelectedDateChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="До:" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <DatePicker x:Name="dpEndDate" 
                                Width="120"
                                Height="40"
                                SelectedDateChanged="dpDate_SelectedDateChanged"/>
                </StackPanel>

                <Button x:Name="btnRefresh" 
                        Content="Обновить" 
                        Height="40"
                        Padding="16,0"
                        Click="btnRefresh_Click"/>
            </WrapPanel>
        </Border>
        
        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="0">
            <DataGrid x:Name="dgPayments" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Background="Transparent"
                      MouseDoubleClick="dgPayments_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat='dd.MM.yyyy'}" Width="*" MinWidth="100"/>
                    <DataGridTextColumn Header="Пользователь" Binding="{Binding Users.FIO}" Width="2*" MinWidth="180"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*" MinWidth="180"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Num}" Width="*" MinWidth="100"/>
                    <DataGridTextColumn Header="Сумма" Binding="{Binding Price}" Width="*" MinWidth="100"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="2*" MinWidth="150"/>
                    <DataGridTemplateColumn Width="Auto" MinWidth="160">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Редактировать" 
                                        Height="36"
                                        Padding="16,0"
                                        ToolTip="Редактировать данные" 
                                        Click="btnEdit_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <Border Grid.Row="3"
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="16"
                Margin="0,16,0,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="txtTotalCount" Text="Количество платежей: 0" FontSize="14" Margin="0,0,24,0"/>
                <TextBlock x:Name="txtTotalSum" Text="Общая сумма: 0.00 руб." FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
        
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,0">
            <Button x:Name="btnAdd" 
                    ToolTip="Добавить данные" 
                    Content="Добавить" 
                    Width="160" 
                    Height="48"
                    Margin="8" 
                    Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" 
                    ToolTip="Редактировать данные" 
                    Content="Редактировать" 
                    Width="160" 
                    Height="48"
                    Margin="8" 
                    Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" 
                    ToolTip="Удалить данные" 
                    Content="Удалить" 
                    Width="160"
                    Height="48"
                    Background="{DynamicResource ErrorBrush}"
                    Margin="8" 
                    Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
