<Page x:Class="WPF_Payment_Project.Pages.CategoryTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Таблица категорий"
      Loaded="Page_Loaded">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Категории" 
                   Grid.Row="0"
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0,0,0,24"/>
        
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,16">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="Поиск:" 
                               FontSize="14" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="txtSearch" 
                             MinWidth="200"
                             Height="40"
                             TextChanged="txtSearch_TextChanged"/>
                </StackPanel>

                <Button x:Name="btnRefresh" 
                        Content="Обновить" 
                        Height="40"
                        Padding="16,0"
                        Click="btnRefresh_Click"/>
            </WrapPanel>
        </Border>
        
        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="0">
            <DataGrid x:Name="dgCategories" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Background="Transparent"
                      MouseDoubleClick="dgCategories_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Name}" Width="*" MinWidth="300"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*" MinWidth="300"/>
                    <DataGridTemplateColumn Width="Auto" MinWidth="160">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Редактировать" 
                                        Height="36"
                                        Padding="16,0"
                                        ToolTip="Редактировать данные" 
                                        Click="btnEdit_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <TextBlock x:Name="txtTotalCount"
                   Grid.Row="3"
                   Text="Всего категорий: 0"
                   FontSize="13"
                   Foreground="{DynamicResource TextSecondaryBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,16,0,0"/>
        
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,16,0,0">
            <Button x:Name="btnAdd" 
                    ToolTip="Добавить данные" 
                    Content="Добавить" 
                    Width="160" 
                    Height="48"
                    Margin="8" 
                    Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" 
                    ToolTip="Редактировать данные" 
                    Content="Редактировать" 
                    Width="160" 
                    Height="48"
                    Margin="8" 
                    Click="btnEdit_Click"/>
            <Button x:Name="btnDelete" 
                    ToolTip="Удалить данные" 
                    Content="Удалить" 
                    Width="160"
                    Height="48"
                    Background="{DynamicResource DangerBrush}"
                    Foreground="White"
                    Margin="8" 
                    Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
