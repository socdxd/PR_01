<Page x:Class="WPF_Payment_Project.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="{DynamicResource BackgroundBrush}" 
                    CornerRadius="8"
                    MaxWidth="500" 
                    Margin="40">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" 
                                      ShadowDepth="0" 
                                      Color="{DynamicResource ShadowColor}" 
                                      Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Регистрация"
                               FontSize="28"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,10"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>

                    <TextBlock Grid.Row="1"
                               Text="Создание новой учетной записи"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>

                    <StackPanel Grid.Row="2" 
                                Margin="40,0,40,40">
                        
                        <TextBlock Text="Логин *"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Grid Margin="0,0,0,20">
                            <TextBox x:Name="txtbxLog"
                                     Height="48"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="12,0"
                                     TextChanged="txtbxLog_TextChanged"
                                     PreviewTextInput="txtbxLog_PreviewTextInput"/>
                            <TextBlock x:Name="lblLogHitn"
                                       Text="Только латинские буквы и цифры"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="12,0,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Opacity="0.6"/>
                        </Grid>

                        <TextBlock Text="Пароль *"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Grid Margin="0,0,0,4">
                            <PasswordBox x:Name="passBxFrst"
                                         Height="48"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Padding="12,0"
                                         PasswordChanged="passBxFrst_PasswordChanged"/>
                            <TextBlock x:Name="lblPassHitn"
                                       Text="Минимум 6 символов"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="12,0,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Opacity="0.6"/>
                        </Grid>
                        <TextBlock x:Name="passwordStrength"
                                   FontSize="11"
                                   Margin="0,0,0,16"
                                   Visibility="Collapsed"/>

                        <TextBlock Text="Подтверждение пароля *"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Grid Margin="0,0,0,4">
                            <PasswordBox x:Name="passBxScnd"
                                         Height="48"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Padding="12,0"
                                         PasswordChanged="passBxScnd_PasswordChanged"/>
                            <TextBlock x:Name="lblPassSecHitn"
                                       Text="Повторите пароль"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="12,0,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Opacity="0.6"/>
                        </Grid>
                        <TextBlock x:Name="passwordMatch"
                                   FontSize="11"
                                   Margin="0,0,0,16"
                                   Visibility="Collapsed"/>

                        <TextBlock Text="ФИО *"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Grid Margin="0,0,0,20">
                            <TextBox x:Name="txtbxFIO"
                                     Height="48"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="12,0"
                                     TextChanged="txtbxFIO_TextChanged"
                                     PreviewTextInput="txtbxFIO_PreviewTextInput"/>
                            <TextBlock x:Name="lblFioHitn"
                                       Text="Фамилия Имя Отчество"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="12,0,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Opacity="0.6"/>
                        </Grid>

                        <TextBlock Text="Роль"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <ComboBox x:Name="comboBxRole"
                                  Height="48"
                                  FontSize="14"
                                  VerticalContentAlignment="Center"
                                  Padding="12,0"
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="User" IsSelected="True"/>
                            <ComboBoxItem Content="Admin"/>
                        </ComboBox>

                        <TextBlock Text="Фотография профиля"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock x:Name="lblPhotoPath"
                                       Grid.Column="0"
                                       Text="Файл не выбран"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,12,0"/>
                            
                            <Button x:Name="btnSelectPhoto"
                                    Grid.Column="1"
                                    Content="Выбрать файл"
                                    Width="120"
                                    Height="36"
                                    Click="btnSelectPhoto_Click"
                                    Style="{DynamicResource SecondaryButtonStyle}"/>
                        </Grid>

                        <Button x:Name="regButton"
                                Content="Зарегистрироваться"
                                Height="48"
                                FontSize="15"
                                FontWeight="Medium"
                                Margin="0,0,0,12"
                                Click="regButton_Click"
                                Style="{DynamicResource PrimaryButtonStyle}"/>
                        
                        <Button x:Name="btnCancel"
                                Content="Отмена"
                                Height="44"
                                Click="btnCancel_Click"
                                Style="{DynamicResource SecondaryButtonStyle}"/>
                        
                        <TextBlock Text="* Обязательные поля"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
