<Page x:Class="WPF_Payment_Project.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль пользователя"
      Loaded="Page_Loaded">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="32"
                Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtWelcome" 
                               Text="Добро пожаловать!" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtLogin" 
                               Text="Логин: " 
                               FontSize="14" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,4"/>
                    <TextBlock x:Name="txtRole" 
                               Text="Роль: " 
                               FontSize="14" 
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnChangePassword" 
                            Content="Сменить пароль" 
                            Height="40"
                            Padding="20,0"
                            Margin="8,0"
                            Click="btnChangePassword_Click"/>
                    <Button x:Name="btnLogout" 
                            Content="Выход" 
                            Height="40"
                            Padding="20,0"
                            Background="{DynamicResource ErrorBrush}"
                            Click="btnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Статистика" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,16"
                           Grid.Row="0"/>

                <WrapPanel Grid.Row="1" Orientation="Horizontal">
                    <Border Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,16,16"
                            MinWidth="200">
                        <StackPanel>
                            <TextBlock Text="Всего платежей" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtTotalPayments" 
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,16,16"
                            MinWidth="200">
                        <StackPanel>
                            <TextBlock Text="Общая сумма" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtTotalSum" 
                                       Text="0.00 руб." 
                                       FontSize="24" 
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,16,16"
                            MinWidth="200">
                        <StackPanel>
                            <TextBlock Text="За текущий месяц" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtMonthSum" 
                                       Text="0.00 руб." 
                                       FontSize="20" 
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtMonthCount" 
                                       Text="0 платежей" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,16,16"
                            MinWidth="200">
                        <StackPanel>
                            <TextBlock Text="Топ категория" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtTopCategory" 
                                       Text="Нет данных" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtTopCategorySum" 
                                       Text="0.00 руб." 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,16,16"
                            MinWidth="400">
                        <StackPanel>
                            <TextBlock Text="Последний платеж" 
                                       FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtLastPayment" 
                                       Text="Нет платежей" 
                                       FontSize="14" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceBrush}"
                CornerRadius="12"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <WrapPanel Grid.Row="0" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16">
                    <Button x:Name="btnMyPayments" 
                            Content="Мои платежи" 
                            Height="48"
                            Padding="24,0"
                            Margin="8"
                            Click="btnMyPayments_Click"/>
                    <Button x:Name="btnAddPayment" 
                            Content="Добавить платеж" 
                            Height="48"
                            Padding="24,0"
                            Margin="8"
                            Click="btnAddPayment_Click"/>
                    <Button x:Name="btnViewDiagrams" 
                            Content="Диаграммы" 
                            Height="48"
                            Padding="24,0"
                            Margin="8"
                            Click="btnViewDiagrams_Click"/>
                </WrapPanel>

                <Frame x:Name="frameContent" 
                       Grid.Row="1"
                       NavigationUIVisibility="Hidden"/>
            </Grid>
        </Border>
    </Grid>
</Page>
