<Page x:Class="WPF_Payment_Project.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">

    <Grid>
        <Border Background="{DynamicResource BackgroundBrush}" 
                CornerRadius="8"
                MaxWidth="450" 
                MaxHeight="600"
                Margin="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  ShadowDepth="0" 
                                  Color="{DynamicResource ShadowColor}" 
                                  Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Вход в систему"
                           FontSize="28"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,40,0,10"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>

                <TextBlock Grid.Row="1"
                           Text="Система учета платежей"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>

                <StackPanel Grid.Row="2" 
                            Margin="40,0">
                    
                    <Grid Margin="0,0,0,20">
                        <TextBox x:Name="TextBoxLogin"
                                 Height="48"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Padding="12,0"
                                 TextChanged="TextBoxLogin_TextChanged"
                                 PreviewTextInput="TextBoxLogin_PreviewTextInput"/>
                        <TextBlock x:Name="txtHintLogin"
                                   Text="Логин"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Opacity="0.6"/>
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <PasswordBox x:Name="PasswordBox"
                                     Height="48"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="12,0"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                        <TextBlock x:Name="txtHintPass"
                                   Text="Пароль"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="12,0,0,0"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Opacity="0.6"/>
                    </Grid>

                    <Border x:Name="captchaPanel" 
                            Visibility="Collapsed"
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="6"
                            Padding="16"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Введите код с картинки:"
                                       FontSize="12"
                                       Margin="0,0,0,8"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                            
                            <Border Background="White"
                                    CornerRadius="4"
                                    Height="60"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                            <GradientStop Color="#FFE0E0E0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Grid.Background>
                                    <TextBlock x:Name="captchaText"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               FontFamily="Consolas"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#FF333333"/>
                                </Grid>
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="captchaInput"
                                         Grid.Column="0"
                                         Height="40"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Padding="12,0"
                                         Margin="0,0,8,0"/>
                                
                                <Button x:Name="refreshCaptcha"
                                        Grid.Column="1"
                                        Content="🔄"
                                        Width="40"
                                        Height="40"
                                        FontSize="18"
                                        Click="refreshCaptcha_Click"
                                        Style="{DynamicResource SecondaryButtonStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Button x:Name="ButtonEnter"
                            Content="Войти"
                            Height="48"
                            FontSize="15"
                            FontWeight="Medium"
                            Click="ButtonEnter_OnClick"
                            IsDefault="True"
                            Style="{DynamicResource PrimaryButtonStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="3"
                            Margin="40,30,40,40">
                    <Separator Margin="0,0,0,20"
                               Background="{DynamicResource BorderBrush}"
                               Opacity="0.3"/>
                    
                    <Button x:Name="ButtonReg"
                            Content="Создать новый аккаунт"
                            Height="44"
                            Margin="0,0,0,12"
                            Click="ButtonReg_Click"
                            Style="{DynamicResource SecondaryButtonStyle}"/>
                    
                    <Button x:Name="ButtonChangePassword"
                            Content="Забыли пароль?"
                            Height="36"
                            Click="ButtonChangePassword_Click"
                            Style="{DynamicResource LinkButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
